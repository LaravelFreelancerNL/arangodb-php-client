{
    "name": "laravel-freelancer-nl/arangodb-php-client",
    "description": "Low level PHP client for ArangoDB",
    "keywords": [
        "arangodb",
        "php",
        "client"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Laravel Freelancer",
            "email": "info@laravel-freelancer.nl"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable" : true,
    "require": {
        "php": "^8.0",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "halaxa/json-machine": "^1.0",
        "spatie/data-transfer-object": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "phpmd/phpmd": "^2.9",
        "vimeo/psalm": "^4.7",
        "squizlabs/php_codesniffer": "^3.6",
        "mockery/mockery": "^1.4",
        "scrutinizer/ocular": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "ArangoClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
